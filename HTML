<body>
  <div class="container">
    <h1>Jogo de Adivinhação</h1>
    <p>Tente adivinhar o número entre 1 e 50!</p>
    <input type="number" id="guess" placeholder="Digite seu palpite" min="1" max="50">
    <br>
    <button onclick="checkGuess()">Verificar</button>
    <div class="result" id="result"></div>
  </div>

  <script>
    // Gera um número aleatório entre 1 e 50
    const secretNumber = Math.floor(Math.random() * 50) + 1;

    function checkGuess() {
      const guess = parseInt(document.getElementById('guess').value);
      const result = document.getElementById('result');

      if (isNaN(guess) || guess < 1 || guess > 50) {
        result.textContent = "Por favor, insira um número válido entre 1 e 50.";
        result.style.color = "red";
      } else if (guess < secretNumber) {
        result.textContent = "Muito baixo! Tente novamente.";
        result.style.color = "orange";
      } else if (guess > secretNumber) {
        result.textContent = "Muito alto! Tente novamente.";
        result.style.color = "orange";
      } else {
        result.textContent = "Parabéns! Você acertou!";
        result.style.color = "green";
      }
    }
  </script>
</body>
